{% extends "base.html" %}
{% load static %}

{% block title %}{{ filter_author.username }}'s Blogs - BlogerMenia{% endblock %}

{% block content %}
<div class="py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

        <!-- Page Header with Author Info -->
        <div class="mb-12">
            <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-2">
                {{ filter_author.username }}'s Blogs
            </h1>
            <p class="text-lg text-gray-600">
                Explore all published blogs by {{ filter_author.get_full_name|default:filter_author.username }}
            </p>
        </div>

        <!-- Search and Filter Section -->
        <div class="mb-8 space-y-4">
            <form method="GET" class="space-y-4">

                <!-- Search Bar -->
                <div class="relative">
                    <svg class="absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                    </svg>
                    <input
                        type="text"
                        name="q"
                        placeholder="Search in {{ filter_author.username }}'s blogs..."
                        value="{{ search_query }}"
                        class="w-full pl-12 pr-24 py-3 bg-white border border-gray-300 rounded-lg text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                    >
                    <button
                        type="submit"
                        class="absolute right-2 top-1/2 transform -translate-y-1/2 px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors font-medium"
                    >
                        Search
                    </button>
                </div>

                <!-- Categories as Pills (only from user's blogs) -->
                {% if categories %}
                <div class="space-y-2">
                    <p class="text-sm text-gray-600">Categories:</p>
                    <div class="flex flex-wrap gap-3">
                        {% for category in categories %}
                            <button
                                type="submit"
                                name="category"
                                value="{{ category.slug }}"
                                class="px-5 py-2 rounded-full font-medium transition-all duration-300 {% if category.slug == selected_category %}bg-indigo-600 text-white{% else %}bg-gray-200 text-gray-700 hover:bg-indigo-100{% endif %}"
                            >
                                {{ category.name }}
                            </button>
                        {% endfor %}
                    </div>
                </div>
                {% endif %}

                <!-- Preserve search query when filtering -->
                {% if search_query %}
                    <input type="hidden" name="q" value="{{ search_query }}">
                {% endif %}
            </form>
        </div>

        <!-- Active Filters Display -->
        {% if search_query or selected_category %}
        <div class="mb-8">
            <div class="flex flex-wrap items-center gap-2">
                <span class="text-sm font-medium text-gray-700">Active Filters:</span>
                
                <!-- Search Query Filter -->
                {% if search_query %}
                <div class="inline-flex items-center gap-2 px-3 py-1.5 bg-white border border-gray-300 rounded-full text-sm">
                    <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                    </svg>
                    <span class="text-gray-700">{{ search_query }}</span>
                    <a href="?{% if selected_category %}category={{ selected_category }}{% endif %}" class="text-gray-500 hover:text-red-600 transition-colors">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                        </svg>
                    </a>
                </div>
                {% endif %}

                <!-- Category Filter -->
                {% if selected_category %}
                    {% for category in categories %}
                        {% if category.slug == selected_category %}
                        <div class="inline-flex items-center gap-2 px-3 py-1.5 bg-white border border-gray-300 rounded-full text-sm">
                            <svg class="w-4 h-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
                            </svg>
                            <span class="text-gray-700 font-medium">{{ category.name }}</span>
                            <a href="?{% if search_query %}q={{ search_query }}{% endif %}" class="text-gray-500 hover:text-red-600 transition-colors">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                                </svg>
                            </a>
                        </div>
                        {% endif %}
                    {% endfor %}
                {% endif %}
            </div>
        </div>
        {% endif %}

        <!-- Results Count -->
        <div class="mb-8">
            <p class="text-gray-600">
                Showing {{ remaining_blogs|length }} of {{ total_count }} blog{{ total_count|pluralize }}
                {% if search_query %}
                    matching "{{ search_query }}"
                {% endif %}
                {% if selected_category %}
                    in 
                    {% for category in categories %}
                        {% if category.slug == selected_category %}{{ category.name }}{% endif %}
                    {% endfor %}
                {% endif %}
            </p>
        </div>

        <!-- Blogs Grid -->
        {% if remaining_blogs %}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
            {% for blog in remaining_blogs %}
            <a href="{% url 'blog-detail' blog.author.username blog.slug %}" class="group block">
                <div class="bg-white border border-gray-300 rounded-xl overflow-hidden hover:border-indigo-500 hover:shadow-lg transition-all duration-300 h-full flex flex-col">
                    <div class="aspect-[16/9] relative overflow-hidden">
                        {% if blog.thumbnail %}
                            <img src="{{ blog.thumbnail.url }}" alt="{{ blog.title }}" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500">
                        {% else %}
                            <div class="w-full h-full bg-gradient-to-br from-indigo-500 via-violet-500 to-purple-600 flex items-center justify-center">
                                <p class="text-white text-3xl font-bold opacity-50">No Image</p>
                            </div>
                        {% endif %}
                    </div>
                    <div class="p-6 flex-grow flex flex-col">
                        {% if blog.category %}
                            <span class="px-3 py-1 bg-indigo-100 text-indigo-600 text-xs font-semibold rounded-full w-fit">{{ blog.category.name }}</span>
                        {% endif %}
                        <h3 class="text-xl font-bold text-gray-900 mt-2 group-hover:text-indigo-600 transition-colors line-clamp-2">{{ blog.title }}</h3>
                        {% if blog.excerpt %}
                            <p class="text-gray-600 text-sm line-clamp-3 mt-2 flex-grow">{{ blog.excerpt }}</p>
                        {% endif %}

                        <!-- Published Date -->
                        <p class="text-xs text-gray-500 mt-3">
                            Published on {{ blog.publishedDate|date:"M d, Y" }}
                        </p>
                    </div>
                </div>
            </a>
            {% endfor %}
        </div>
        {% else %}
        <!-- No Blogs Found Message -->
        <div class="text-center py-16">
            <svg class="mx-auto h-24 w-24 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            <h3 class="mt-4 text-xl font-semibold text-gray-900">No blogs found</h3>
            <p class="mt-2 text-gray-600">
                {% if search_query or selected_category  %}
                    No blogs match your search criteria. Try adjusting your filters.
                {% else %}
                    {{ filter_author.username }} hasn't published any blogs yet.
                {% endif %}
            </p>
            {% if search_query or selected_category  %}
                <a href="{% url 'user-blogs' filter_author.username %}"
                   class="inline-block mt-6 px-6 py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors font-medium">
                    Clear all filters
                </a>
            {% endif %}
        </div>
        {% endif %}

        <!-- Pagination -->
        {% if remaining_blogs %}
            {% include 'partials/pagination.html' %}
        {% endif %}
    </div>
</div>
{% endblock %}